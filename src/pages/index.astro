---
import Layout from '../layouts/Layout.astro'
import Link from '../componenets/Link.astro'
import { slugify } from '@utils'

const modules = import.meta.glob('../content/fonts/*/**.json', { eager: true })
const fonts = Object.values(modules).map((mod: any) => mod.default)
---

<Layout title={'NECOdes - BunnyPlugins'}>
	<h1>BunnyPlugins</h1>
	<section>
		<h2>Fonts</h2>
		<ul>
			{
				fonts.map((font) => (
					<li>
						<Link
							href={`fonts/${slugify(font.name)}`}
							text={font.name}
						/>
					</li>
				))
			}
		</ul>
	</section>
</Layout>