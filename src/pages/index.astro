---
export const prerender = false;

import Base from '@/layouts/Base.astro';
import Link from '@/components/Link.astro';
import { sluggit } from '@/lib/utils';
import { getCollection } from 'astro:content';

const fonts = (await getCollection("font")).map(font => ({
  ...font,
  slug: font.data.slug || sluggit(font.data.title),
}));
---
<Base title={'NECOdes - RevengePlugins'}>
	<header class="border-b-1 border-[var(--border)]">
		<h1 text-4xl>BunnyPlugins</h1>
	</header>
	<section class="my-1">
		<h2>Fonts</h2>
		<ul>
			{ fonts.map((font) => (
			<li class="pl-3 leading-tight">
				<Link href={`fonts/${font.slug}`} text={font.data.title} />

			</li>
			)) }
		</ul>
	</section>
	<section>
		<h2>Plugins</h2>
	</section>
	<section>
		<h2>Themes</h2>
	</section>
</Base>
