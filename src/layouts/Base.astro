---
import '@/styles/global.css'
import { ClientRouter } from "astro:transitions";
import Head from '@/components/Head.astro';

const { title } = Astro.props;
---
<html
	lang="en"
	class="bg-background text-foreground scheme-dark"
	transition:animate="initial"
>
	<head>
		<link rel="preload" href="/fonts/ibm-plex-sans-condensed.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
		<Head title={title}/>
		<ClientRouter />
	</head>
	<body class="h-svh p-pad">
		<main class="h-full max-w-2xl p-pad m-auto border border-border border-dashed rounded-rad">
			<slot />
		</main>
	</body>
</html>

